<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.udacity.sandwichclub.DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">
            <ImageView
                android:id="@+id/image_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/sandwich_picture_content_description"
                android:scaleType="fitCenter" />
        </LinearLayout>
        <GridLayout
            android:layout_width="@dimen/detail_grid_width"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:orientation="horizontal"
            android:columnCount="2"
            android:rowCount="4">
            <TextView
                android:text="Also Known As"
                android:textAppearance="@style/FieldLabelStyle"
                android:layout_width="@dimen/detail_col_width"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/aka_tv"
                android:text="[Value]"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="fill"/>
            <TextView
                android:text="Ingredients"
                android:textAppearance="@style/FieldLabelStyle"
                android:layout_width="@dimen/detail_col_width"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/ingredients_tv"
                android:text="[Value]"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="fill"/>
            <TextView
                android:text="Place of Origin"
                android:textAppearance="@style/FieldLabelStyle"
                android:layout_width="@dimen/detail_col_width"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/origin_tv"
                android:text="[Value]"
                android:layout_height="wrap_content"
                android:layout_width="@dimen/detail_label_width"/>
            <TextView
                android:text="Description"
                android:textAppearance="@style/FieldLabelStyle"
                android:layout_width="@dimen/detail_col_width"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/description_tv"
                android:text="[Value]"
                android:layout_height="wrap_content"
                android:layout_width="@dimen/detail_label_width"/>
        </GridLayout>
    </LinearLayout>
</ScrollView>